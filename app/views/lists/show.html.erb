
<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
    <h1><%= @list.name %></h1>
  </div>
  <span class="movie-tag"><%= pluralize(@list.movies.size, "movie") %></span>
</div>



<div class="row justify-content-center">
  <div class="col-8">
    <ul class="bookmarks-grid">
      <% @list.bookmarks.each do |bookmark|  %>
        <li>
          <h2><%= bookmark.movie.title %></h2>
          <%= bookmark.movie.rating %>
          <p> <%= bookmark.movie.overview %>  </p>
          <%= image_tag "#{bookmark.movie.poster_url}", height: 300 %>
          <p>
          <%= bookmark.comment%>
          </p>
          <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </li>
      <% end  %>
    </ul>

    <%= link_to "Add a movie", new_list_bookmark_path(@list) %>

    <%= link_to "Back to main Page", lists_path, class: "btn btn-primary" %>
  </div>
</div>
